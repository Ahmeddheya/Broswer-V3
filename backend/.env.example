# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aura_browser?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:8081"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# External APIs
GOOGLE_API_KEY=""
ANALYTICS_API_KEY=""

# Features
ENABLE_SWAGGER=true
ENABLE_CORS=true
LOG_LEVEL="debug"